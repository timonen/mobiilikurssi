<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/themegray"
    tools:context=".Settings">

    <TextView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?colorPrimaryVariant"
        android:gravity="center"
        android:text="@string/string_settings"
        android:textColor="@color/themewhite"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textview_energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/string_energy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.393" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/textview_energy"
        app:layout_constraintStart_toStartOf="@+id/textview_energy"
        app:layout_constraintTop_toBottomOf="@+id/textview_energy">

        <RadioButton
            android:id="@+id/radio_kcal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:text="@string/radio_kcal"
            app:layout_constraintStart_toStartOf="@+id/textview_energy"
            app:layout_constraintTop_toBottomOf="@+id/textview_energy" />

        <RadioButton
            android:id="@+id/radio_kj"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="@string/radio_kj"
            app:layout_constraintStart_toStartOf="@+id/textview_energy"
            app:layout_constraintTop_toBottomOf="@+id/radio_kcal" />
    </RadioGroup>



</androidx.constraintlayout.widget.ConstraintLayout>